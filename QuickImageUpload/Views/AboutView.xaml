<Window x:Class="QuickImageUpload.Views.AboutView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About Quick Image Upload" Height="288" Width="487" ResizeMode="NoResize" ShowInTaskbar="False">
    <Window.Resources>
        <BitmapImage UriSource="../Images/Upload.png" x:Key="UploadImage" />
    </Window.Resources>
    <Canvas>
        <TextBlock Text="About Quick Image Upload" FontSize="20" Canvas.Left="12" FontWeight="Bold" Canvas.Top="12" />
        <Image Source="{StaticResource UploadImage}" Canvas.Left="337" Canvas.Top="0" />
        <TextBlock Canvas.Left="12" Canvas.Top="45">
            by <Hyperlink NavigateUri="http://jiewmeng.tumblr.com">Jiew Meng</Hyperlink>
        </TextBlock>
        <TextBlock Height="140" Canvas.Left="28" Width="272" Canvas.Top="76" TextWrapping="Wrap">Quick Image Upload was created as a simple tool for quick &amp; easy uploads to popular Web Services like <Hyperlink NavigateUri="http://imgur.com/">Imgur</Hyperlink> &amp; <Hyperlink NavigateUri="http://imageshack.us/">Image Shack</Hyperlink> for use in Blogs &amp; Forums. <LineBreak /><LineBreak />
        It is build using WPF, C#, MVVM Foundation. <LineBreak /><LineBreak />
        <Run FontWeight="Bold">Icon credits</Run>: <Hyperlink NavigateUri="http://www.iconfinder.com/icondetails/27886/128/upload_icon">Must Have Icon Set</Hyperlink></TextBlock>
    </Canvas>
</Window>
