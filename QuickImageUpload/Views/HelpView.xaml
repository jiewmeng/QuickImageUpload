<Window x:Class="QuickImageUpload.Views.HelpView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Help" Height="213" Width="408" ResizeMode="NoResize" ShowInTaskbar="False">
    <Canvas>
        <TextBlock Canvas.Left="12" Canvas.Top="12">
            <Run FontSize="20" FontWeight="Bold">Uploading Images</Run>
            <LineBreak /><LineBreak />
            There are 3 ways to upload images with Quick Image Upload. 
        </TextBlock>
        <RichTextBox Canvas.Left="12" Canvas.Top="86" Height="58" Width="291" BorderThickness="0" IsReadOnly="True">
        	<FlowDocument>
        		<List MarkerStyle="Disc">
        			<ListItem>
        				<Paragraph><Run Text="Browse (Ctrl+O) for images"/></Paragraph>
        			</ListItem>
        			<ListItem>
        				<Paragraph><Run Text="Paste (Ctrl+P) Image Data from Clipboard"/></Paragraph>
        			</ListItem>
        			<ListItem>
        				<Paragraph><Run Text="Drag &amp; Drop Image Files"/></Paragraph>
        			</ListItem>
        		</List>
        	</FlowDocument>
            
        </RichTextBox>
    </Canvas>
</Window>
